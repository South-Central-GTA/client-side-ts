{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": [
            "es6",
            "esnext",
            "dom", 
            "dom.iterable"
        ],
        "inlineSourceMap": false,
        "declaration": false,
        "typeRoots": [
            "./node_modules/@types",
            "./node_modules/@altv"
        ],
        "esModuleInterop": true,
        "allowJs": true,
        "importHelpers": false,
        "sourceMap": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
    },
    "exclude": [
        "node_modules"
    ]
}